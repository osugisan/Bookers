<h2>User info</h2>
<%= form_with model: @user, local:true do |f|%>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="mb-10">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="mb-10">
      <%= f.label :image %>
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="mb-10">
      <%= f.label :introduction %>
      <%= f.text_area :introduction %>
    </div>

    <div class="mb-10">
      <%= f.label :postcode, '郵便番号' %><br />
      <%= f.text_field :postcode, autocomplete: "postcode" %>
    </div>

    <div class="mb-10">
      <%= f.label :prefecture_name, '都道府県' %><br />
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {prompt: '選択してください'} %>
    </div>

    <div class="mb-10">
      <%= f.label :address_city, '市区町村' %><br />
      <%= f.text_field :address_city, autocomplete: "address_city" %>
    </div>

    <div class="mb-10">
      <%= f.label :address_street, '番地' %><br />
      <%= f.text_field :address_street, autocomplete: "address_street" %>
    </div>

    <div class="mb-10">
      <%= f.label :address_building, '建物' %><br />
      <%= f.text_field :address_building, autocomplete: "address_building" %>
    </div>
    <div class="mt-10">
    <%= f.submit "Update User" %>
    </div>
  </div>
<% end %>
