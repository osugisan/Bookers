<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="row">
          <nav class="nav navbar-nav navbar-left">
            <div class="">
              <span>Bookers</span>
            </div>
          </nav>
          <div class="">
            <nav>
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %>
                </li>
                <li>
                  <%= link_to "About", home_about_path, class: "glyphicon glyphicon-link" %>
                </li>
                <li>
                  <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
                </li>
                <li>
                  <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>

    </header>

    <body>
      <div class="container">
        <p id="notice"></p>
        <%= yield %>
      </div>
    </body>

    <footer>
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">CopyRight Infratop.inc</div>
      </div>
    </footer>
  </body>
</html>
